                        id: display
                        font_style: 'H6'
                        theme_text_color: 'Primary'
                        text: ""
                        halign: 'center'
                        text_size: None, self.height
                        padding: (10,10)

                AnchorLayout:
                    pos_hint: {'center_x':.5, 'center_y': .2}
                    MDRectangleFlatButton:
                        size_hint: 0.8, None
                        text: "HOME"
                        bold: 1
                        font_size: 20
                        elevation_normal: 2
                        opposite_colors: True
                        text_color: get_color_from_hex("#FFFFFF")
                        md_bg_color: get_color_from_hex("#821082")
                        pos_hint: {'center_x': .5}
                        on_release:
                            app.root.current = "home"
                            root.manager.transition.direction = "right"

                AnchorLayout:
                    pos_hint: {'center_x':.5, 'center_y': .3}
                    MDRectangleFlatButton:
                        size_hint: 0.8, None
                        text: "BACK"
                        bold: 1
                        font_size: 20
                        elevation_normal: 2
                        opposite_colors: True
                        text_color: get_color_from_hex("#FFFFFF")
                        md_bg_color: get_color_from_hex("#ba13ba")
                        pos_hint: {'center_x': .5}
                        on_release:
                            app.root.current = "ans"
                            root.manager.transition.direction = "right"
