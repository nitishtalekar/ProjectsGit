<Interface>:

    name : n
    lname : ln
    email : e
    inputs : ip
    GridLayout:
        cols:1
        
        size: root.width, root.height
        
        GridLayout:
            cols:2
            size: root.width,root.height
            
            Label:
                text: "NAME"
                color: [1,0,0,1]
                
            TextInput:
                id : n
                multiline: False
                
            Label:
                text: "LAST NAME"
                color: [0,1,0,1]
                
            TextInput:
                id : ln
                multiline: False
                
            Label:
                text: "EMAIL"
                color: [0,0,1,1]
                
            TextInput:
                id : e
                multiline: False
        
        Button:
            text:"SUBMIT"
            on_press: root.submit()
            
        Label: 
            id: ip
            text: "Your Inputs"
            color: [1,1,1,1]
